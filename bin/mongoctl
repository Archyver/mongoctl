#!/usr/bin/env python
__author__ = 'abdul'
import traceback
import sys
import mongoctl

from mongoctl import mongoctl
###############################################################################
########################                   ####################################
########################     BOOTSTRAP     ####################################
########################                   ####################################
###############################################################################

if __name__ == '__main__':
    try:
        # delegate to mongoctl.py main
        mongoctl.main(sys.argv[1:])
    except (SystemExit, KeyboardInterrupt) , e:
        if e.code == 0:
            pass
        else:
            raise
    except:
        traceback.print_exc()